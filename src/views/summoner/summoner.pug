extends ../layout

block content
  h1 Summoner Lookup
  form(method='get' action='/summoner')
    .col-md-6
      .form-group
        label(for='summoner') Summoner Name
        input.form-control#summoner(placeholder='Munsterberg', name='summoner')
      .radio
        label
          input(type='radio' name='region' value='na')
          | NA
      .radio
        label
          input(type='radio' name='region' value='euw')
          | EUW
      .radio
        label
          input(type='radio' name='region' value='eune')
          | EUNE
      .radio
        label
          input(type='radio' name='region' value='br')
          | BR
      .radio
        label
          input(type='radio' name='region' value='lan')
          | LAN
      button.btn.btn-primary(type='Submit') Search
